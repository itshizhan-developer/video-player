{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "declarationMap":true,
    "allowJs": true,
    "declarationDir":"dist",
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom","dom.iterable","scripthost"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx","src/index.ts"],
  "exclude": [
    "node_modules",
    "src/main.ts"
  ]
}
